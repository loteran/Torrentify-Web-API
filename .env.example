# ============================================
# TORRENTIFY - Configuration
# ============================================
# Copiez ce fichier vers .env et modifiez les valeurs
# cp .env.example .env

# ============================================
# CLES API (OBLIGATOIRES)
# ============================================

# Cle API The Movie Database (https://www.themoviedb.org/settings/api)
TMDB_API_KEY=

# URLs des trackers avec passkey (separes par des virgules)
# Exemple: https://tracker.example.com/announce?passkey=votre_passkey
TRACKERS=

# ============================================
# ACTIVATION DES CATEGORIES
# ============================================

# Activer/desactiver les categories de medias (true/false)
ENABLE_FILMS=true
ENABLE_SERIES=true
ENABLE_ANIMES_FILMS=true
ENABLE_ANIMES_SERIES=true
ENABLE_JEUX=true

# ============================================
# SYSTEME / PERMISSIONS
# ============================================

# User ID et Group ID pour les permissions des fichiers
PUID=1000
PGID=100

# Port de l'interface web
WEB_PORT=3000

# Chemin de base (pour reverse proxy, ex: /torrentify)
# Laisser vide si acces direct
BASE_PATH=

# ============================================
# OPTIONS AVANCEES
# ============================================

# Nombre de traitements en parallele
PARALLEL_JOBS=1

# Mapping des hardlinks pour seeding (optionnel)
# Format: source:dest,source2:dest2
# Exemple: /data/films:/data/hardlinks,/data/series:/data/hardlinks
HARDLINK_MAPPING=/mnt/Stockage/Films:/mnt/Stockage/Downloads,/mnt/Stockage/Series:/mnt/Stockage/Downloads

# Mode debug (true/false)
DEBUG=false

# Environnement (production/development)
NODE_ENV=production

# ============================================
# AUTHENTIFICATION (OPTIONNEL)
# ============================================

# Activer l'authentification (true/false) - desactive par defaut
AUTH_ENABLED=false

# Identifiants de connexion (requis si AUTH_ENABLED=true)
AUTH_USERNAME=admin
AUTH_PASSWORD=changeme

# Cle secrete pour les tokens JWT (generee automatiquement si vide)
AUTH_SECRET=
